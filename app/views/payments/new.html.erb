<%= simple_form_for :payment, url: pay_path do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.input :total, disabled: true, input_html: {value: number_to_currency(order.total)} %>
    <%= form.input :name, label: 'Name on Card', input_html: {value: current_user.full_name} %>
    <%= form.input :number %>
    <%= form.input :expiry, as: :date, start_year: Time.zone.now.year,
                                       add_month_numbers: true,
                                       discard_day: true,
                                       order: [:month, :year],
                                       date_separator: '/' %>

    <%= form.input :ccv, label: 'CCV' %>
  </div>

  <div class="form-actions">
    <%= form.button :submit, 'Pay' %>
  </div>
<% end %>
