<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Registrations</title>
	<%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="top-bar">
    <div class="row">
      <div class="twelve columns">
        <ul class="right">
          <% if signed_in? %>
            <li class="signed-in">
              <%= current_user.full_name %>
              (<%= link_to 'sign out', sign_out_path, method: :delete %>)
            </li>
          <% else %>
            <li><%= link_to 'Sign In', '/auth/passport' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="row" id="masthead">
    <div class="six columns"><%= link_to image_tag('logo.png'), root_path %></div>
    <div class="six columns"><%= link_to image_tag('start.png'), '/auth/passport' %></div>
  </div>

  <div class="row" id="masthead">
    <div class="eight columns">
      <%= yield %>
    </div>

    <div id="sidebar" class="four columns">
    </div>
  </div>

  <script>
    var campaignId = '<%= Rails.application.config.fundraiser_config.fetch(:campaign_id) %>';
  </script>
  <%= javascript_include_tag "application" %>
</body>
</html>
